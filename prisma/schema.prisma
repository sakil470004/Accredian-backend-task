datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Referral {
  id            Int      @id @default(autoincrement())
  referrerName  String
  referrerEmail String   @unique
  refereeName   String
  refereeEmail  String   @unique
  createdAt     DateTime @default(now())
}


